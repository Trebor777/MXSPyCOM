{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/MXSPyCOM.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/MXSPyCOM.csproj",
                "-c",
                "release"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "scripts\\publish.ps1",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/MXSPyCOM.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Execute Script in 3ds Max (Debug)",
            "type": "shell",
            "command": "${workspaceFolder}/bin/Debug/net6.0-windows/win-x64/MXSPyCOM.exe",
            "args": [
                "-s",
                "${file}"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Execute Script in 3ds Max",
            "type": "shell",
            "command": "${workspaceFolder}/bin/Release/net6.0-windows/win-x64/publish/MXSPyCOM.exe",
            "args": [
                "-s",
                "${file}"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}